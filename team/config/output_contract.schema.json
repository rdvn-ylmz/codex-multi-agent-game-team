{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "team-output-contract",
  "type": "object",
  "required": [
    "task_id",
    "owner",
    "status",
    "acceptance_criteria",
    "artifacts",
    "risks",
    "handoff_to",
    "next_role_action_items"
  ],
  "properties": {
    "task_id": {"type": "string"},
    "owner": {"type": "string"},
    "status": {
      "type": "string",
      "enum": [
        "done",
        "needs_review",
        "needs_changes",
        "blocked",
        "needs_fix_format",
        "ready_for_handoff",
        "dispatched",
        "approved_or_changes_requested",
        "passed_or_failed"
      ]
    },
    "acceptance_criteria": {
      "type": "array",
      "items": {"type": "string"},
      "minItems": 1
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {"type": "string"},
          {
            "type": "object",
            "required": ["type", "value"],
            "properties": {
              "type": {"type": "string"},
              "value": {
                "oneOf": [
                  {"type": "string"},
                  {"type": "array", "items": {"type": "string"}}
                ]
              }
            },
            "additionalProperties": true
          }
        ]
      }
    },
    "risks": {
      "type": "array",
      "items": {"type": "string"}
    },
    "handoff_to": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string"}
    },
    "next_role_action_items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["role", "items"],
        "properties": {
          "role": {"type": "string"},
          "items": {
            "type": "array",
            "items": {"type": "string"},
            "minItems": 1
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}
